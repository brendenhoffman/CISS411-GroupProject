@model CISS411_GroupProject.ViewModels.DesignProposalViewModel

@{
    ViewData["Title"] = "Upload Design Proposal";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">Upload Design Proposal</h2>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Customer:</strong> @Model.CustomerName</p>
                            <p><strong>Occasion:</strong> @Model.Occasion</p>
                            <p><strong>Items:</strong> @Model.OrderItemsDescription</p>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <strong>Budget:</strong>
                                @(Model.CustomerBudget.HasValue ? $"${Model.CustomerBudget.Value:F2}" : "—")
                            </p>
                            <p><strong>Delivery Date:</strong> @Model.DeliveryDate.ToString("MM/dd/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Design Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="OrderID" />

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" required />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <small class="form-text text-muted">Upload an image of your design proposal (JPG, PNG, GIF)</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ProposedQuantity" class="form-label"></label>
                                    <input asp-for="ProposedQuantity" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="ProposedQuantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EstimatedCost" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="EstimatedCost" class="form-control" type="number" step="0.01" min="0.01" />
                                    </div>
                                    <span asp-validation-for="EstimatedCost" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Must not exceed budget:
                                        @(Model.CustomerBudget.HasValue ? $"${Model.CustomerBudget.Value:F2}" : "N/A")
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DesignNotes" class="form-label"></label>
                            <textarea asp-for="DesignNotes" class="form-control" rows="4"
                                      placeholder="Add any notes about this design proposal..."></textarea>
                            <span asp-validation-for="DesignNotes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ViewForOrder" asp-route-id="@Model.OrderID" class="btn btn-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Upload Design
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelector('input[name="EstimatedCost"]').addEventListener('blur', function() {
            const budget = @Model.CustomerBudget;
            const estimated = parseFloat(this.value);

            if (estimated > budget) {
                alert('Warning: Estimated cost exceeds customer budget of $' + budget.toFixed(2));
            }
        });
    </script>
}